# Alpha-Beta Pruning Example

def alphabeta(depth, alpha, beta, maximizingPlayer):
    if depth == 0:
        return depth  # simple evaluation

    if maximizingPlayer:
        value = -999
        for i in range(2):  # 2 moves
            value = max(value, alphabeta(depth-1, alpha, beta, False))
            alpha = max(alpha, value)
            if alpha >= beta:
                break
        return value
    else:
        value = 999
        for i in range(2):
            value = min(value, alphabeta(depth-1, alpha, beta, True))
            beta = min(beta, value)
            if beta <= alpha:
                break
        return value

print("Best value using Alpha-Beta Pruning:", alphabeta(3, -999, 999, True))
